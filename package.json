{
  "name": "markdown-proofing",
  "version": "0.0.0",
  "description": "A markdown proofing platform for individuals, teams, and organizations.",
  "bin": "cli.js",
  "main": "lib/index.js",
  "files": [
    "lib/",
    "cli.js"
  ],
  "keywords": [
    "markdown",
    "proofing",
    "language"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ritterim/markdown-proofing"
  },
  "scripts": {
    "audit": "nsp check package",
    "build": "babel -d ./ ./src && shjs build-copy-presets.js",
    "check": "npm run audit && npm outdated --depth 0",
    "coverage": "nyc --require babel-core/register --reporter=lcov --reporter=text --reporter=html npm test",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "lint": "eslint src test",
    "test": "ava",
    "test:watch": "chokidar 'test/*.js' 'src/**' -c 'npm test' --silent --initial",
    "validate": "npm run lint && npm test",
    "prepare": "npm run build && npm run validate && npm run check"
  },
  "author": {
    "name": "Ritter Insurance Marketing",
    "url": "https://www.ritterim.com"
  },
  "dependencies": {
    "alex": "^2.0.0",
    "app-root-path": "^1.0.0",
    "buzzwords": "^1.0.1",
    "chalk": "^1.1.1",
    "ensure-oxford-commas": "^0.1.0",
    "fillers": "^1.0.0",
    "glob": "^6.0.4",
    "meow": "^3.7.0",
    "passive-voice": "^0.1.0",
    "round-to": "^1.1.0",
    "sentiment": "^1.0.6",
    "text-statistics": "^0.1.1",
    "write-good": "^0.9.1"
  },
  "devDependencies": {
    "ava": "^0.11.0",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.5",
    "babel-plugin-transform-function-bind": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "nsp": "^2.2.0",
    "nyc": "^5.5.0",
    "shelljs": "^0.6.0"
  }
}
